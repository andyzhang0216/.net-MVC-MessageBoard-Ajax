@model IPagedList<Messages>
@section Scripts{
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script>
    $("input[type=submit]").click(function () {
        $("input[type=text]").val("");
        $("textarea").val("");
    });
</script>
}
@section head {
<link href="~/Content/Index.css" rel="stylesheet" />
<link href="~/Content/MessageList.css" rel="stylesheet" />
}

<div class="wrapper">
    <div id="form_block">
        @using (Ajax.BeginForm("NewPost", "Home", new AjaxOptions { UpdateTargetId = "messages_block" }))
        {
            <input type="text" name="title" placeholder="title" />
            <br />
            <textarea name="content" cols="60" rows="5" placeholder="content"></textarea>
            <br />
            <input class="submit" type="submit" value="送出" />
        }
    </div>
    <div id="messages_block">
        @{ Html.RenderAction("RenderPosts", "Home"); }
    </div>
</div>
