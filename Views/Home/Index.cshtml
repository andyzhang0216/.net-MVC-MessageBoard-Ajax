@model IPagedList<Messages>
@section Scripts{
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
<link href="~/Content/Index.css" rel="stylesheet" />

<div class="wrapper">
    <div id="form_block">
        @using (Ajax.BeginForm("AjaxPost", "Home", new AjaxOptions { UpdateTargetId = "messages_block", InsertionMode = InsertionMode.Replace }))
        {
            <input type="text" name="title" placeholder="title" />
            <br />
            <textarea name="content" cols="60" rows="5" placeholder="content"></textarea>
            <br />
            <input class="submit" type="submit" value="送出" />
        }
    </div>
    <div id="messages_block">
        @Html.Partial("_MessageList", Model)
    </div>
</div>